<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado')  %> 
	  <% }else {%>
			<%- include('./partials/header')  %> 
	  <% } %>

			<!-- Banner -->
			<div class=>
				<img src="images/banner.jpg" alt="Banner de ofertas">
			</div>
			<!-- /Banner -->

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Novedades</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% for( let i=0; i < listaAutos.length; i++ ) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/detail/<%= listaAutos[i].id %>">
									<figure class="product-box_image">
										<img src=<%=listaAutos[i].img %> alt="<%= listaAutos[i].nombre %>">
									</figure>
									<article class="product-box_data">
										<h2>
											<%= listaAutos[i].nombre %>
										</h2>
										<p>
											<%= listaAutos[i].descripcion %>
										</p>
										<p>
											<%= listaAutos[i].comentarios %>
										</p>
									</article>
								</a>
							</section>
						</div>
						<% } %>
				</div>
			</div>

			<!-- Más comentados -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Más comentados</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% for( let i=0; i < 4; i++ ) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/detail/<%= listaAutos[i].id %>">
									<figure class="product-box_image">
										<img src=<%=listaAutos[i].img %> alt="<%= listaAutos[i].nombre %>">
									</figure>
									<article class="product-box_data">
										<h2>
											<%= listaAutos[i].nombre %>
										</h2>
										<p>
											<%= listaAutos[i].descripcion %>
										</p>
										<p><%= listaAutos[i].comentarios %></p>
									</article>
								</a>
							</section>
						</div>
						<% } %>
				</div>
			</div>
			<!-- /Más comentados -->


			<!-- footer -->
			<%- include('./partials/footer') %>
			<!-- /footer -->
	</body>

</html>