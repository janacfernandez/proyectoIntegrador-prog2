<!DOCTYPE html>
<html lang="es">
<!--  Head -->
<%- include('./partials/head') %>
	<!-- Fin Head -->

	<body class="bregister">
		<!-- Header -->
		<% if (locals.user !=undefined) { %>
			<%- include('./partials/headerLogueado') %>
				<% }else {%>
					<%- include('./partials/headerDeslogueado') %>
						<% } %>
							<!-- /Header -->

							<!-- Novedades -->
							<div class="container products-wrapper">
								<div>
									<div class="col-12">
										<h2 class="products-title">Registrate</h2>
									</div>

									<% if (locals.errors != undefined) { %>
										<h3><%=  locals.errors.message%> </h3>
									<% } %>

									<!-- Show the "ultimos" products -->
									<form class="form-register" action="/users/register" enctype="multipart/form-data"
										method="POST">
										<h4 class="register">Nombre *</h4>
										<input class="register" type="text" name="name" id="" required>
										<h4 class="register">Apellido *</h4>
										<input class="register" type="text" name="apellido" id="" required>
										<h4 class="register">E-mail *</h4>
										<input class="register" type="email" name="email" id="" required>
										<h4 class="register"> Usuario *</h4>
										<input class="register" type="text" name="usuario" id="" required>
										<h4 class="register">Contraseña *</h4>
										<input class="register" type="password" name="contrasenia" id="" required>
										<h4 class="register"> Fecha de nacimiento * </h4>
										<input class="fecha" type="date" name="fDeNac" id="" required>
										<h4 class="register"> Número de documento *</h4>
										<input class="register" type="number" name="dni" id="" required>
										<h4 class="register"> Foto de perfil * </h4>
										<input class="register" type="file" name="imgRegister" id="" required>
										<br>
										<button class="button-register" type="submit"> Crear </button>
									</form>
								</div>
							</div>

							<!-- footer -->
							<%- include('./partials/footer') %>
								<!-- /footer -->
	</body>

</html>