<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo.jpg" />

	<title> Top Wheels </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<!-- Fin Include Head -->


<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Resultados de b√∫squeda: <%= busq %> </h2>
				</div>
				<!-- Show the "ultimos" products -->
				
					
					<% for( let i = 0; i < listaAutos.length; i++ ) { %>
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">	
							<a href="/products/detail/<%= listaAutos[i].id %>">
								<figure class="product-box_image">
									<img src=<%= listaAutos[i].img %> alt="<%= listaAutos[i].nombre %>">
								</figure>
								<article class="product-box_data">
									<h2><%= listaAutos[i].nombre %></h2>
									<p><%= listaAutos[i].descripcion %></p>
									<p>Comentarios: 12</p>
								</article>
							</a>
					</section>
					</div>	
					<% } %>
					
									
			</div>
		</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>