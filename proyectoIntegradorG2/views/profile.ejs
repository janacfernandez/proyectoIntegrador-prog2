<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado')  %> 
  <% }else {%>
		<%- include('./partials/header')  %> 
  <% } %>
	<!-- /Header -->
	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row" class="row-p" >
			<div class="img-container offset-3 col-2">
				<img src=<%= img %> alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center  ">
					<h1 class="main-title">  <%= locals.user.nombre%> 
						<a href="profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<p class="profile-p"><%= locals.user.email %></p>
						<li class="cprofile">8 productos</li>
						<li class="cprofile">200 seguidores</li>
						<li class="cprofile">300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < 8; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= listaAutos[i].id %>">
							<figure class="product-box_image">
								<img src=<%= listaAutos[i].img %> alt="<%= listaAutos[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= listaAutos[i].nombre %></h2>
								<p><%= listaAutos[i].descripcion %></p>
								<p><%= listaAutos[i].comentarios %></p>
							</article>
						</a>
					</section>
				</div>			
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>

</html>