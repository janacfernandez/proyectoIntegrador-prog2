<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado')  %> 
  <% }else {%>
		<%- include('./partials/headerDeslogueado')  %> 
  <% } %>
	<!-- /Header -->
	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row" class="row-p" >
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= productos.user.foto%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center  ">
					<h1 class="main-title">  <%= productos.user.nombre + " " + productos.user.apellido %> 
					</h1>
					
					<form action="/users/profileUsers/<%= productos.id%>" method="POST" >
						<input type="hidden" name="seguidoId" value="<%= productos.user.id%>">
						<input type="submit" class="btn mt-3 ml-4" value="SEGUIR">
					</form>
				</div>
				<div>
					<ul class="">
						<p class="profile-p"><%= productos.user.email %></p>
						<li class="cprofile"><%= productosUsuario.length %> productos</li>
						<li class="cprofile">200 seguidores</li>
						<li class="cprofile">300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
<!-- Mis productos -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Mis productos</h2>
		</div>
		<!-- Show mis productos -->
		<% for( let i = 0; i < productos.length; i++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/id/<%=productos[i].id %>">
						<figure class="product-box_image">
							<% if (productos[i].img != null) { %>
								<img src="../images/products/<%=productos[i].img %>" alt="<%= productos[i].nombre %>">
							<% } else { %>
								<img src="../images/products/defaultImage.jpg" alt="Default">
							<% }  %> 
							
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombre %></h2>
							<p><%= productos[i].descripcion %></p>
							<p><%= productos[i].comentarios %></p>
						</article>
					</a>
				</section>
			</div>			
		<% } %>
	</div>
</div>
<!-- /Mis productos -->
	

	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>

</html>